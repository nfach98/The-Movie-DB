<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".app.detail.fragment.FactFragment">

    <TextView
        android:id="@+id/tvGenre"
        style="@style/TextDetail.Title"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/genre"/>

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        style="@style/TextDetail.Content"
        app:layout_constraintTop_toBottomOf="@id/tvGenre"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Stats" />

    <TextView
        android:id="@+id/tvStatus"
        style="@style/TextDetail.Title"
        app:layout_constraintTop_toBottomOf="@id/genre"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Status"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        style="@style/TextDetail.Content"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Stats" />


    <TextView
        android:id="@+id/tvDate"
        style="@style/TextDetail.Title"
        app:layout_constraintTop_toBottomOf="@id/status"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Release Date"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        style="@style/TextDetail.Content"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Stats" />


    <TextView
        android:id="@+id/tvLang"
        style="@style/TextDetail.Title"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Original Language"/>

    <TextView
        android:id="@+id/lang"
        android:layout_width="wrap_content"
        style="@style/TextDetail.Content"
        app:layout_constraintTop_toBottomOf="@id/tvLang"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Stats" />


    <TextView
        android:id="@+id/tvRuntime"
        style="@style/TextDetail.Title"
        app:layout_constraintTop_toBottomOf="@id/lang"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Runtime"/>

    <TextView
        android:id="@+id/runtime"
        android:layout_width="wrap_content"
        style="@style/TextDetail.Content"
        app:layout_constraintTop_toBottomOf="@id/tvRuntime"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Stats" />


    <TextView
        android:id="@+id/tvBudget"
        style="@style/TextDetail.Title"
        app:layout_constraintTop_toBottomOf="@id/runtime"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Budget"/>

    <TextView
        android:id="@+id/budget"
        android:layout_width="wrap_content"
        style="@style/TextDetail.Content"
        app:layout_constraintTop_toBottomOf="@id/tvBudget"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Stats" />


    <TextView
        android:id="@+id/tvRevenue"
        style="@style/TextDetail.Title"
        app:layout_constraintTop_toBottomOf="@id/budget"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Revenue"/>

    <TextView
        android:id="@+id/revenue"
        android:layout_width="wrap_content"
        style="@style/TextDetail.Content"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvRevenue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Stats" />


</androidx.constraintlayout.widget.ConstraintLayout>