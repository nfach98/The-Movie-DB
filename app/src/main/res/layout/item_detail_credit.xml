<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:paddingTop="6dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@android:color/holo_green_dark" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/card_photo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:textSize="18sp"
        style="@style/TextDetail.Title"
        android:maxLines="2"
        tools:text="Nama"/>

    <TextView
        android:id="@+id/tv_char"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/card_photo"
        android:layout_below="@id/tv_name"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="2dp"
        style="@style/TextDetail.Content"
        android:maxLines="2"
        tools:text="Nama sebagai" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/card_photo"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>